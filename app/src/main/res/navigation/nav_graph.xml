<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.uni.gruppenphaseandroid.MenuFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/menu_fragment">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.uni.gruppenphaseandroid.GameFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/game_fragment">

        <action
            android:id="@+id/action_SecondFragment_to_IngameFragment"
            app:destination="@+id/InGameFragment">

        </action>
        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/InGameFragment"
        android:name="com.example.gruppenphaseandroid.InGameFragment"
        android:label="In-Game Fragment"
        tools:layout="@layout/activity_ingame">
        <action
            android:id="@+id/action_IngameFragment_to_SecondFragment"
            app:destination="@+id/SecondFragment"
            />
        >
    </fragment>
</navigation>